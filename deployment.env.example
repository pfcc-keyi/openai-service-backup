# OpenAI Service - Deployment Configuration Example
# Copy this file and rename to .env for production deployment

# Service settings
SERVICE_NAME=openai-service
SERVICE_VERSION=1.0.0
DEV_MODE=false
LOG_LEVEL=INFO

# Server configuration
HOST=0.0.0.0
PORT=8004
WORKERS=1

# Authentication - CHANGE THIS IN PRODUCTION
SERVICE_TOKEN=your-secure-service-token-here

# Redis configuration (provided by deployment platform)
REDIS_URL=redis://localhost:6379
REDIS_DB=0

# üîë OpenAI API Key Pool (REQUIRED)
# ‚ö†Ô∏è  CRITICAL: Set your actual OpenAI API key here
PRIMARY_OPENAI_API_KEY=sk-your-openai-api-key-here

# Optional: Additional API keys for load balancing
# OPENAI_API_KEYS=sk-key1,sk-key2,sk-key3

# Lock configuration
DEFAULT_LOCK_TIMEOUT=300
MAX_LOCK_TIMEOUT=1800
LOCK_ACQUIRE_TIMEOUT=30

# Redis Redlock settings
REDLOCK_RETRY_COUNT=3
REDLOCK_RETRY_DELAY=0.2
REDLOCK_VALIDITY_TIME=10000

# API Key health and rotation
API_KEY_HEALTH_CHECK_INTERVAL=300
API_KEY_ROTATION_ENABLED=true

# Statistics and monitoring
USAGE_STATS_RETENTION_DAYS=30
METRICS_COLLECTION_ENABLED=true

# Request timeout
REQUEST_TIMEOUT=30
HEALTH_CHECK_TIMEOUT=10 